#include "scop.h"

t_mat	get_model_matrix(t_mat t, t_mat r, t_mat s)
{
	t_mat	m;

	m = identity();
	m = multiply_mat_mat(s, m);
	m = multiply_mat_mat(r, m);
	m = multiply_mat_mat(t, m);
	return (m);
}
