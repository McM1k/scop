#include "header.h"

vec4	rotate(vec4 vec, vec4 axis, double angle)
{
	vec4	new_vec;
	double co;
	double si;
	co = cos(angle);
	si = sin(angle);
	new_vec.x = 
		(co + axis.x * axis.x * (1 - co)) * x +
		(axis.x * axis.y * (1 - co) - axis.z * si) * y +
		(axis.x * axis.z * (1 - co) + axis.y * si) * z;
	new_vec.y = 
		(axis.x * axis.y * (1 - co) + axis.z * si) * x +
		(co + axis.y * axis.y * (1 - co)) * y +
		(axis.y * axis.z * (1 - co) - axis.x * si) * z;
	new_vec.z = 
		(axis.x * axis.z * (1 - co) - axis.y * si) * x +
		(axis.y * axis.z * (1 - co) + axis.x * si) * y +
		(co + axis.z * axis.z * (1 - co)) * z;
	new_vec.w = vec.w;
	return (new_vec);
}
